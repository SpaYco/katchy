<% @recipes.each do |u| %>
<p> Recipe : <%= u.name %> </p>
<p> ingredients: <%= u.ingredients %> </p>
<iframe width="1280" height="720" src="https://www.youtube.com/embed/<%= get_youtube_id(u.video) %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
<p> amount: <%= u.amount %> </p>
<% end %>